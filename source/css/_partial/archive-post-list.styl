.archive {
    display:none;
    max-width: 500px;
    margin: 3em auto;

    .archive-main-category {
        font-size: 20px;
    }

    label {
        font-size: 16px;
        font-weight: bold;
    }

    .subtitle-item {
        padding: 0 0 3px 50px;
    }

    .post-item {
        padding: 2px 0 0 50px;
    }

    .post-time,
    .post-title-link {
        font-size: 1rem;
    }
    .post-title-link {
        display: block;
        margin-left: 100px;
        color: #8CC7B5;
        word-break: break-all;
        &:hover {
            border-bottom: 0;
            color: #267B54;
        }
    }
    .post-info {
        float: left;
        width: 100px;
        color: #7f8c8d;
    }
}

.tab-div-menu {
    text-align: center;
    margin: 3em auto;

    ul {
        font-size: 0;
    }

    li {
        display: inline-block;
        cursor: pointer;
        font-size: 14px;
        color: #fff;
        padding: 4px 12px;
        background-color: #8CC7B5;
    }
    
    .datetime {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .category {
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
}